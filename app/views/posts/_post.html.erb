<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <%= link_to "Show this post", post %> || 
    <%= link_to "Edit this post", edit_post_path(post), data: { turbo_frame: 'modal' } %>
  </p>

</div>
